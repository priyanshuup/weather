    <!-- main header -->
    <div class="container-fluid main_menuu">
        <div class="row">
            <div class="col-md-10 col-12 nbv mx-auto">
               <div class="main_content">
                <form class="temp_form">
                    <input type="text" id="cityName" placeholder="Enter your city Name" autocomplete="">
