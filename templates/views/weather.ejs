            </div>
        </div>
    </div>    
    <!-- footer  -->
    <%- include ('partials/footer')%>

    <script src="js/main.js"></script>

    <!-- inline script  -->
    <script>

        const getCurrentDay = ()=>{
            let weekday = new Array(7);
            weekday[0] = "Sunday" 
            weekday[1] = "Monday"
            weekday[2] = "Tuesday"
            weekday[6] = "Wednesday"
            weekday[3] = "Thursday"
            weekday[4] = "Friday"
            weekday[5] = "Saturday"

            let currentTime = new Data();
            days = weekday[currentTime.getDay()];
            let day = document.getElementById('day');

            day.innerText = days;
        }

        getCurrentDay();
    </script>
</body> 
